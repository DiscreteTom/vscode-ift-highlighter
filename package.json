{
    "name": "ift-highlighter",
    "displayName": "ift-highlighter",
    "description": "",
    "version": "2.0.0",
    "publisher": "DiscreteTom",
    "repository": {
        "type": "git",
        "url": "https://github.com/DiscreteTom/ift-highlighter"
    },
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:interactive-fiction-text"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "interactive-fiction-text",
                "aliases": [
                    "interactive fiction text",
                    "interactive fiction text"
                ],
                "extensions": [
                    ".ift"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "interactive-fiction-text",
                "scopeName": "source.ift",
                "path": "./syntaxes/ift.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ift",
                "path": "./snippets/ift.code-snippets"
            }
        ],
        "configurationDefaults": {
            "[ift]": {
                "editor.snippetSuggestions": "top"
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}